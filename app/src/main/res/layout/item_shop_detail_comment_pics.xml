<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_goods_detail_up_comment_witpic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_comment_head_bg">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/id_shop_detail_comment_usericon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_comment_head_demo" />

            </FrameLayout>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/id_shop_detail_comment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="我是名字我是名字将"
                        android:textColor="@color/comment_gray"
                        android:textSize="15sp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_comment_name_icon" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="打分"
                        android:textColor="@color/comment_hint"
                        android:textSize="13sp" />

                    <RatingBar
                        android:id="@+id/rating_goods_detail_pic"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="5"
                        android:theme="@style/RatingBar_CustomColor" />
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|top">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/id_shop_detail_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="2018-08-05"
                    android:textColor="@color/comment_hint"
                    android:textSize="13sp" />

            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/id_shop_detail_comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:paddingLeft="60dp"
            android:paddingTop="8dp"
            android:paddingRight="40dp"
            android:paddingBottom="8dp"
            android:text="正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题正标题"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="310dp"
            android:layout_height="110dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/id_shop_detail_comment_pic1"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/id_shop_detail_comment_pic2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/id_shop_detail_comment_pic3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>