<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/bottom_bar_delegate_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_layout_bottom" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        tl:tl_iconHeight="17dp"
        tl:tl_iconWidth="17dp"
        tl:tl_indicator_color="@color/gray"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/app_main"
        tl:tl_textUnselectColor="@color/bar_grey_90"
        tl:tl_textsize="11sp"
        tl:tl_underline_height="0dp" />

</RelativeLayout>