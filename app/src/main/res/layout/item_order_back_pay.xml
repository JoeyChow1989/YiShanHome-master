<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center"
    android:gravity="center"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="right|top">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/tv_item_order_back_pay_pic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_demo_pic1_comment" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_order_back_pay_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:text="维嫣养生旗舰店"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_item_order_back_pay_ordernum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="订单号: 129818231231"
                    android:textColor="@color/gray_hint"
                    android:textSize="10sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_item_order_back_pay_ordertime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:textColor="@color/gray_hint"
                    android:textSize="10sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_item_order_back_pay_servicetime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="未服务"
                    android:textColor="@color/gray_hint"
                    android:textSize="10sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_order_back_pay_typetxt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingRight="20dp"
                android:text="待服务"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_order_back_pay_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|right"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:text="598元"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_order_back_pay_comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:gravity="center|right"
                android:text="退款完成"
                android:textColor="@color/gray_hint"
                android:textSize="10sp" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>